{
    "suggest.detailField" : "preview",
    "signature.preferShownAbove": true,
    "python.jediEnabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": ["--ignore=E1,E2,E3,E402,E501,F403,W2,W391,W503", "--format=default"],
    "diagnostic.checkCurrentLine": true,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs" : ["--skip-string-normalization"],
    "coc.preferences.formatOnSaveFiletypes": [
        "python",
        "javascript",
        "typescript",
        "json",
        "typescript.tsx",
        "graphql"
    ],
    "eslint.options": { "parserOptions": { "ecmaVersion": 8 } },
    "html.enable": true,
    "html.format.enable": true,
    "html.filetypes": ["html","htmldjango"]
}
